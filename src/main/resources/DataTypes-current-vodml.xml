<vo-dml:model xmlns:vo-dml="http://www.ivoa.net/xml/VODML/v1" xmlns:xsi="http://www.w3.org/2001/XMLSchema">
    <name>dt</name>
    <description>a general purpose collection of data types</description>
    <identifier/>
    <uri/>
    <title>DataTypes</title>
    <author>Patrick Dowler, Canadian Astronomy Data Centre</author>
    <version>0.1</version>
    <lastModified>2025-02-12T18:00:00</lastModified>
    
    <import>
        <name>ivoa</name>
        <url>https://www.ivoa.net/xml/VODML/IVOA-v1.vo-dml.xml</url>
        <documentationURL>https://www.ivoa.net/documents/VODML/</documentationURL>
    </import>
    
    <primitiveType>
        <vodml-id>uuid</vodml-id>
        <name>uuid</name>
        <description>represents a 128-bit binary ID in the canonical ascii UUID format</description>
        <extends>
            <vodml-ref>ivoa:string</vodml-ref>
        </extends>
    </primitiveType>

    <primitiveType>
        <vodml-id>double</vodml-id>
        <name>double</name>
        <description>an IEEE double precision (64-bit) floating point value</description>
        <extends>
            <vodml-ref>ivoa:real</vodml-ref>
        </extends>
    </primitiveType>

    <primitiveType>
        <vodml-id>int32</vodml-id>
        <name>int</name>
        <description>a 32-bit signed integer</description>
        <extends>
            <vodml-ref>ivoa:integer</vodml-ref>
        </extends>
    </primitiveType>

    <primitiveType>
        <vodml-id>int64</vodml-id>
        <name>long</name>
        <description>a 64-bit signed integer</description>
        <extends>
            <vodml-ref>ivoa:integer</vodml-ref>
        </extends>
    </primitiveType>

    <dataType>
        <vodml-id>Point</vodml-id>
        <name>Point</name>
        <description>location in two-dimensions</description>
        <attribute>
            <vodml-id>Point.cval1</vodml-id>
            <name>cval1</name>
            <datatype>
                <vodml-ref>dt:double</vodml-ref>
            </datatype>
            <multiplicity>
                <minOccurs>1</minOccurs>
                <maxOccurs>1</maxOccurs>
            </multiplicity>
        </attribute>
        <attribute>
            <vodml-id>Point.cval2</vodml-id>
            <name>cval1</name>
            <datatype>
                <vodml-ref>dt:double</vodml-ref>
            </datatype>
            <multiplicity>
                <minOccurs>1</minOccurs>
                <maxOccurs>1</maxOccurs>
            </multiplicity>
        </attribute>
    </dataType>

    <dataType abstract="true">
        <vodml-id>Shape</vodml-id>
        <name>Shape</name>
        <!-- tagging base class -->
    </dataType>

    <dataType>
        <vodml-id>Circle</vodml-id>
        <name>Circle</name>
        <description>a circular region in two-dimensions</description>
        <extends>
            <vodml-ref>dt:Shape</vodml-ref>
        </extends>
        <attribute>
            <vodml-id>Circle.center</vodml-id>
            <name>center</name>
            <datatype>
                <vodml-ref>dt:Point</vodml-ref>
            </datatype>
            <multiplicity>
                <minOccurs>1</minOccurs>
                <maxOccurs>1</maxOccurs>
            </multiplicity>
        </attribute>
        <attribute>
            <vodml-id>Circle.radius</vodml-id>
            <name>radius</name>
            <datatype>
                <vodml-ref>dt:double</vodml-ref>
            </datatype>
            <multiplicity>
                <minOccurs>1</minOccurs>
                <maxOccurs>1</maxOccurs>
            </multiplicity>
        </attribute>
    </dataType>

    <dataType>
        <vodml-id>MultiShape</vodml-id>
        <name>MultiShape</name>
        <description>multiple simple shapes describing regions in two-dimensions</description>
        <attribute>
            <vodml-id>MultiShape.shapes</vodml-id>
            <name>shapes</name>
            <datatype>
                <vodml-ref>dt:Shape</vodml-ref>
            </datatype>
            <multiplicity>
                <minOccurs>1</minOccurs>
                <maxOccurs>-1</maxOccurs>
            </multiplicity>
        </attribute>
    </dataType>

    <dataType>
        <vodml-id>Polygon</vodml-id>
        <name>Polygon</name>
        <description>a simple polygon region in two-dimensions defined a sequence of points</description>
        <extends>
            <vodml-ref>dt:Shape</vodml-ref>
        </extends>
        <attribute>
            <vodml-id>Polygon.points</vodml-id>
            <name>points</name>
            <datatype>
                <vodml-ref>dt:Point</vodml-ref>
            </datatype>
            <multiplicity>
                <minOccurs>3</minOccurs>
                <maxOccurs>-1</maxOccurs>
            </multiplicity>
        </attribute>
    </dataType>

    <dataType>
        <vodml-id>Interval</vodml-id>
        <name>Interval</name>
        <description>a set of numeric values defined by a lower and upper bound (bounds included: [a,b])</description>
        <attribute>
            <vodml-id>Interval.lower</vodml-id>
            <name>lower</name>
            <datatype>
                <vodml-ref>dt:double</vodml-ref>
            </datatype>
            <multiplicity>
                <minOccurs>1</minOccurs>
                <maxOccurs>1</maxOccurs>
            </multiplicity>
        </attribute>
        <attribute>
            <vodml-id>Interval.upper</vodml-id>
            <name>upper</name>
            <datatype>
                <vodml-ref>dt:double</vodml-ref>
            </datatype>
            <multiplicity>
                <minOccurs>1</minOccurs>
                <maxOccurs>1</maxOccurs>
            </multiplicity>
        </attribute>
    </dataType>

</vo-dml:model>
